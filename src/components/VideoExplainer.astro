<section class="relative w-full bg-[#FFD600] py-16 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 pointer-events-none">
        <!-- Comic-style Sparkles -->
        <div class="absolute top-1/4 right-1/4 text-4xl animate-sparkle">✨</div>
        <div class="absolute bottom-1/3 left-1/3 text-4xl animate-sparkle-delayed">⭐</div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto">
            <!-- Video Container with 16:9 aspect ratio -->
            <div class="relative w-full aspect-video rounded-2xl overflow-hidden border-4 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transform hover:scale-[1.02] transition-transform duration-300">
                <!-- Video Element -->
                <video 
                    id="explainer-video" 
                    class="absolute inset-0 w-full h-full object-contain bg-white"
                    poster="/strategic/images/bookpdf.png"
                >
                    <source src="/strategic/media/strategicslothmedia.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                </video>

                <!-- Play Button Overlay -->
                <div class="absolute inset-0 flex items-center justify-center z-20 play-button-overlay">
                    <div class="w-24 h-24 bg-white/90 rounded-full flex items-center justify-center transform hover:scale-110 transition-transform cursor-pointer">
                        <div class="w-0 h-0 border-t-[20px] border-t-transparent border-l-[35px] border-l-[#1B1B3D] border-b-[20px] border-b-transparent ml-2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .animate-sparkle {
        animation: sparkle 3s ease-in-out infinite;
    }

    .animate-sparkle-delayed {
        animation: sparkle 3s ease-in-out infinite;
        animation-delay: 1.5s;
    }

    @keyframes sparkle {
        0%, 100% { opacity: 0.5; transform: scale(1) rotate(0deg); }
        50% { opacity: 1; transform: scale(1.2) rotate(15deg); }
    }

    .play-button-overlay {
        transition: opacity 0.3s ease;
    }

    .play-button-overlay.hidden {
        opacity: 0;
        pointer-events: none;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const video = document.querySelector('video');
        const playButton = document.querySelector('.play-button-overlay');
        
        if (video && playButton) {
            // Play button click handler
            playButton.addEventListener('click', () => {
                video.play();
                playButton.classList.add('hidden');
            });

            // Video click handler for play/pause
            video.addEventListener('click', () => {
                if (video.paused) {
                    video.play();
                    playButton.classList.add('hidden');
                } else {
                    video.pause();
                    playButton.classList.remove('hidden');
                }
            });

            // Show play button when video ends
            video.addEventListener('ended', () => {
                playButton.classList.remove('hidden');
            });
        }
    });
</script> 
