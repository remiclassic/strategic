---

<section class="relative py-24 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-gradient-to-br from-purple-100 via-purple-50 to-white"></div>
    <div class="absolute inset-0 bg-halftone opacity-5 pointer-events-none mix-blend-multiply animate-subtle-scale"></div>
    
    <!-- Enhanced Decorative Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-10 left-10 text-6xl animate-sparkle">✨</div>
        <div class="absolute bottom-20 right-10 text-6xl animate-sparkle" style="animation-delay: 1s">💡</div>
        <div class="absolute top-1/3 right-1/4 text-5xl animate-sparkle" style="animation-delay: 0.5s">🎯</div>
        <div class="absolute bottom-1/3 left-1/4 text-5xl animate-sparkle" style="animation-delay: 1.5s">💫</div>
        <div class="absolute top-1/2 right-10 text-4xl animate-float">💭</div>
        <div class="absolute bottom-1/4 left-10 text-4xl animate-float" style="animation-delay: 1.2s">💪</div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <!-- Enhanced Header -->
        <div class="text-center mb-16 reveal-on-scroll">
            <div class="relative mb-12">
                <!-- Decorative elements -->
                <div class="absolute -left-4 top-1/2 transform -translate-y-1/2 rotate-[-15deg]">
                    <span class="text-6xl animate-float" style="animation-delay: 0.5s">💫</span>
                </div>
                <div class="absolute -right-4 top-1/2 transform -translate-y-1/2 rotate-[15deg]">
                    <span class="text-6xl animate-float" style="animation-delay: 1s">✨</span>
                </div>

                <!-- Main Title Group -->
                <div class="relative inline-block">
                    <div class="comic-bubble bg-white transform -rotate-2 mb-6 hover:rotate-2 transition-all duration-300">
                        <p class="text-xl font-bold relative inline-block">
                            <span class="relative z-10">📦 What Could You Sell?</span>
                            <span class="absolute inset-0 bg-purple-200 -rotate-3 z-0"></span>
                        </p>
                    </div>
                    
                    <h2 class="comic-title text-5xl md:text-6xl mb-6 max-w-4xl mx-auto transform hover:scale-105 transition-all duration-300">
                        <span class="relative inline-block">
                            <span class="relative z-10">Work Less.</span>
                            <div class="absolute bottom-0 left-0 right-0 h-4 bg-[#FFE066] -rotate-1 -z-10 animate-width"></div>
                        </span>
                        <br />
                        <span class="relative inline-block mt-2">
                            <span class="relative z-10">Live More.</span>
                            <div class="absolute bottom-0 left-0 right-0 h-4 bg-purple-200 rotate-1 -z-10 animate-width" style="animation-delay: 0.3s"></div>
                        </span>
                    </h2>
                </div>

                <!-- Enhanced Subtitle -->
                <div class="relative">
                    <p class="text-2xl text-gray-700 mb-8 max-w-3xl mx-auto transform hover:scale-105 transition-all duration-300">
                        <span class="inline-block animate-bounce-slow mr-2">🧠</span>
                        Turn your knowledge into digital products that sell while you nap.
                    </p>
                    
                    <!-- Feature Badges with Enhanced Layout -->
                    <div class="flex flex-wrap justify-center gap-6 mb-8">
                        {features.map((feature, index) => (
                            <div 
                                class="comic-badge bg-white px-6 py-3 transform hover:scale-110 transition-all duration-300"
                                style={`animation-delay: ${index * 200}ms; transform: rotate(${index % 2 ? '2deg' : '-2deg'})`}
                            >
                                <span class="font-bold flex items-center gap-2">
                                    <span class="text-purple-600">✓</span>
                                    {feature}
                                </span>
                            </div>
                        ))}
                    </div>
                    
                    <p class="text-xl text-gray-700 max-w-2xl mx-auto mb-8 relative">
                        <span class="relative inline-block">
                            You do not need a big audience. You do not need to be an expert.
                            <br class="hidden md:block" />
                            You just need an idea—or even just a starting point.
                            <div class="absolute -bottom-2 left-0 right-0 h-2 bg-[#FFE066] opacity-50"></div>
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Filter Buttons -->
        <div class="flex flex-wrap justify-center gap-4 mb-12">
            {filterCategories.map((category) => (
                <button
                    class="filter-button px-6 py-3 bg-white border-2 border-black rounded-xl font-bold transform hover:scale-105 hover:-rotate-2 transition-all duration-300"
                    data-category={category.id}
                >
                    {category.label}
                </button>
            ))}
        </div>

        <!-- Enhanced Product Examples Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            {productExamples.map((product, index) => (
                <div 
                    class={`product-card comic-card bg-white transform hover:scale-105 hover:-rotate-2 transition-all duration-300 group overflow-hidden`}
                    data-category={product.category}
                    style={`animation-delay: ${index * 200}ms`}
                >
                    <div class="relative p-8">
                        <!-- Category Label -->
                        <div class="absolute top-4 right-4">
                            <span class="inline-block px-3 py-1 text-sm font-bold bg-black text-white rounded-full">
                                {product.category}
                            </span>
                        </div>

                        <!-- Icon and Title -->
                        <div class="flex items-start gap-6 mb-6">
                            <div class="text-5xl transform group-hover:scale-110 group-hover:rotate-12 transition-transform duration-300">
                                {product.icon}
                            </div>
                            <h3 class="text-2xl font-bold leading-tight pt-1">
                                {product.title}
                            </h3>
                        </div>
                        
                        <!-- Story with Quote Style -->
