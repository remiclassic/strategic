<script>
  // Modal system
  const modals = ['disclaimer', 'privacy', 'terms', 'test'];
  
  // Open modal function with comic-style animation
  function openModal(id) {
    const modal = document.getElementById(`modal-${id}`);
    const overlay = document.getElementById(`${id}-overlay`);
    const content = document.getElementById(`${id}-content`);
    
    if (modal && overlay && content) {
      // Show modal
      modal.classList.remove('hidden');
      
      // Add to history state
      history.pushState({ modal: id }, '', '');
      
      // Animate in with comic pop
      setTimeout(() => {
        overlay.classList.add('opacity-100');
        content.classList.remove('scale-95', 'opacity-0');
        content.classList.add('scale-100', 'opacity-100', 'comic-pop');
      }, 10);
      
      // Prevent body scroll
      document.body.style.overflow = 'hidden';
    }
  }
  
  // Close modal function with comic-style animation
  function closeModal(id) {
    const modal = document.getElementById(`modal-${id}`);
    const overlay = document.getElementById(`${id}-overlay`);
    const content = document.getElementById(`${id}-content`);
    
    if (modal && overlay && content) {
      // Animate out
      overlay.classList.remove('opacity-100');
      content.classList.remove('scale-100', 'opacity-100', 'comic-pop');
      content.classList.add('scale-95', 'opacity-0');
      
      // Hide modal after animation
      setTimeout(() => {
        modal.classList.add('hidden');
        document.body.style.overflow = '';
      }, 300);
    }
  }
  
  // Add event listeners for each modal
  modals.forEach(id => {
    // Close button
    document.getElementById(`close-${id}`)?.addEventListener('click', () => {
      closeModal(id);
    });
    
    // Click outside to close
    document.getElementById(`${id}-overlay`)?.addEventListener('click', (e) => {
      if (e.target.id === `${id}-overlay`) {
        closeModal(id);
      }
    });
  });
  
  // ESC key to close any open modal
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      modals.forEach(id => {
        const modal = document.getElementById(`modal-${id}`);
        if (modal && !modal.classList.contains('hidden')) {
          closeModal(id);
        }
      });
    }
  });
  
  // Handle browser back button
  window.addEventListener('popstate', (e) => {
    if (e.state && e.state.modal) {
      closeModal(e.state.modal);
    } else {
      // Close any open modal if no state
      modals.forEach(id => {
        const modal = document.getElementById(`modal-${id}`);
        if (modal && !modal.classList.contains('hidden')) {
          closeModal(id);
        }
      });
    }
  });
  
  // Make openModal function available globally
  window.openModal = openModal;
</script>

