<div id="purchase-notification" class="fixed bottom-4 left-4 z-40">
  <a href="#get-started" class="block">
    <div class="relative w-fit transform transition-all duration-300 opacity-0 translate-y-4" id="notification-container">
      <!-- Main notification box -->
      <div class="bg-white rounded-[16px] px-4 py-3 shadow-[3px_3px_0px_rgba(0,0,0,1)] border-[3px] border-black">
        <div class="flex flex-col">
          <p class="text-base font-bold leading-tight">James just purchased</p>
          <p class="text-[15px] text-black/80">SCALE TO FREEDOM...</p>
        </div>
      </div>
    </div>
  </a>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const notifications = [
    {
      name: "Sarah",
      product: "Don't Do Anything"
    },
    {
      name: "Michael",
      product: "STARTER PACKAGE"
    },
    {
      name: "Emma",
      product: "BEST VALUE PACKAGE"
    },
    {
      name: "James",
      product: "SCALE TO FREEDOM"
    }
  ];

  const notificationContainer = document.getElementById('notification-container');
  const nameEl = document.getElementById('purchase-notification').querySelector('.font-bold');
  const detailsEl = document.getElementById('purchase-notification').querySelector('.text-black\\/80');
  let currentIndex = 0;

  function showNotification() {
    // Get current notification data
    const data = notifications[currentIndex];
    
    // Update content
    nameEl.textContent = `${data.name} just purchased`;
    detailsEl.textContent = `${data.product}...`;
    
    // Show notification
    notificationContainer.classList.remove('opacity-0', 'translate-y-4');
    notificationContainer.classList.add('opacity-100', 'translate-y-0');
    
    // Hide after delay
    setTimeout(() => {
      notificationContainer.classList.remove('opacity-100', 'translate-y-0');
      notificationContainer.classList.add('opacity-0', 'translate-y-4');
      
      // Prepare for next notification
      currentIndex = (currentIndex + 1) % notifications.length;
      
      // Show next notification after delay
      setTimeout(showNotification, 8000);
    }, 4000);
  }

  // Start showing notifications after initial delay
  setTimeout(showNotification, 2000);
});
</script>

