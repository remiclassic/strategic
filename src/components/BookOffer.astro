<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Add hover effects to comic elements
        document.querySelectorAll('.comic-bubble, .comic-bubble-pointed, .comic-button, .comic-price-tag').forEach(element => {
            element.addEventListener('mouseenter', () => {
                element.style.transform = 'translateY(-4px) scale(1.05)';
            });
            
            element.addEventListener('mouseleave', () => {
                element.style.transform = '';
            });
        });
        
        const bookSection = document.getElementById('book-offer');
        const bookColumn = document.getElementById('book-offer-column');
        const bookSticky = document.getElementById('book-offer-sticky');

        if (bookSection && bookColumn && bookSticky) {
            const PADDING = 32;
            let bookTicking = false;

            const updateBookSticky = () => {
                const sectionRect = bookSection.getBoundingClientRect();
                const columnRect = bookColumn.getBoundingClientRect();
                const bookH = bookSticky.offsetHeight;
                const columnTopInSection = columnRect.top - sectionRect.top;
                const maxTranslate = sectionRect.height - columnTopInSection - bookH - PADDING;

                if (sectionRect.top >= 0) {
                    bookSticky.style.transform = 'translateY(0)';
                } else {
                    const scrolled = -sectionRect.top;
                    const clamped = Math.max(0, Math.min(scrolled, maxTranslate));
                    bookSticky.style.transform = `translateY(${clamped}px)`;
                }
                bookTicking = false;
            };

            window.addEventListener('scroll', () => {
                if (!bookTicking) {
                    requestAnimationFrame(updateBookSticky);
                    bookTicking = true;
                }
            }, { passive: true });
            updateBookSticky();
        }

        // Add smooth scroll behavior for the pricing arrow
        const pricingArrow = document.querySelector('a[href="#pricing"]');
        if (pricingArrow) {
            pricingArrow.addEventListener('click', (e) => {
                e.preventDefault();
                
                // Find all elements with id="pricing"
                const pricingElements = document.querySelectorAll('[id="pricing"]');
                
                // If we found any pricing elements, scroll to the first one
                if (pricingElements.length > 0) {
                    // Get the position of the pricing element
                    const pricingPosition = pricingElements[0].getBoundingClientRect().top + window.scrollY;
                    
                    // Scroll to that position with smooth behavior
                    window.scrollTo({
                        top: pricingPosition,
                        behavior: 'smooth'
                    });
                }
            });
        }
        
        // Countdown Timer ‚Äî persists deadline in localStorage
        function initCountdown() {
            const countdownElement = document.getElementById('book-offer-countdown');
            if (!countdownElement) return;

            const STORAGE_KEY = 'book-offer-deadline';
            let deadline = parseInt(localStorage.getItem(STORAGE_KEY) || '0', 10);

            if (!deadline || deadline <= Date.now()) {
                deadline = Date.now() + 24 * 60 * 60 * 1000;
                localStorage.setItem(STORAGE_KEY, String(deadline));
            }

            const tick = () => {
                const remaining = Math.max(0, Math.floor((deadline - Date.now()) / 1000));
                const hours = Math.floor(remaining / 3600);
                const minutes = Math.floor((remaining % 3600) / 60);
                const seconds = remaining % 60;

                countdownElement.textContent =
                    `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;

                if (remaining <= 0) {
                    clearInterval(timer);
                    localStorage.removeItem(STORAGE_KEY);
                }
            };

            tick();
            const timer = setInterval(tick, 1000);
        }

        initCountdown();
    });
