---
// This component creates decorative orange circles for the hero background
---

<div class="absolute inset-0 overflow-hidden pointer-events-none z-0">
  <svg class="absolute top-0 left-0 w-16 h-16 text-[#FF8A3C] opacity-30" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r="40" fill="currentColor" />
  </svg>
  <svg class="absolute top-1/4 right-1/4 w-12 h-12 text-[#FF8A3C] opacity-20" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r="40" fill="currentColor" />
  </svg>
  <svg class="absolute bottom-1/3 left-1/3 w-20 h-20 text-[#FF8A3C] opacity-25" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r="40" fill="currentColor" />
  </svg>
  <svg class="absolute top-1/3 right-1/3 w-10 h-10 text-[#FF8A3C] opacity-15" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r="40" fill="currentColor" />
  </svg>
  <svg class="absolute bottom-1/4 left-1/4 w-14 h-14 text-[#FF8A3C] opacity-30" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r="40" fill="currentColor" />
  </svg>
  <svg class="absolute top-2/3 right-2/3 w-8 h-8 text-[#FF8A3C] opacity-20" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r="40" fill="currentColor" />
  </svg>
  <svg class="absolute bottom-2/3 left-2/3 w-16 h-16 text-[#FF8A3C] opacity-25" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r="40" fill="currentColor" />
  </svg>
  <svg class="absolute top-1/2 right-1/2 w-12 h-12 text-[#FF8A3C] opacity-15" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r="40" fill="currentColor" />
  </svg>
</div>

<style>
  @media (max-width: 768px) {
    svg {
      transform: scale(0.7);
    }
  }
</style> 