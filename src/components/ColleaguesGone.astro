    opacity: 0.5;
    transform: scale(1) rotate(-1deg);
  }

  /* Sloth emoji animation */
  .checklist-item.checked .sloth-emoji {
    opacity: 1;
    transform: translateX(0);
  }

  /* Hover effects */
  .checklist-item button:hover .unchecked {
    transform: scale(0.95);
  }

  .checklist-item:hover .sloth-emoji {
    animation: wave 1s infinite;
  }

  @keyframes wave {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-15deg); }
    75% { transform: rotate(15deg); }
  }

  /* Updated confetti animations */
  @keyframes confetti-fall {
    0% {
      transform: translate(0, 0) rotate(0);
    }
    100% {
      transform: translate(calc(var(--end-x) - 50%), var(--end-y)) rotate(var(--rotation));
    }
  }

  @keyframes confetti-fade {
    0% { opacity: 1; }
    60% { opacity: 1; }
    100% { opacity: 0; }
  }

  @keyframes confetti-rotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(var(--rotation)); }
  }

  #header-confetti-container {
    position: absolute;
    inset: -20px;
    overflow: visible;
    pointer-events: none;
    z-index: 50;
  }

  .confetti-particle {
    position: absolute;
    pointer-events: none;
    will-change: transform, opacity;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const panels = document.querySelectorAll('.panel-container');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const panel = entry.target;
          const index = panel.getAttribute('data-index');
          setTimeout(() => {
            panel.classList.add('show');
          }, index * 150); // Stagger each panel by 150ms
          observer.unobserve(panel);
        }
      });
    }, {
      threshold: 0.2,
      rootMargin: '50px'
    });

    panels.forEach((panel) => {
      observer.observe(panel);
    });

    // Add hover effect for panel captions on desktop
    const panelGroups = document.querySelectorAll('.panel-container .group');
    panelGroups.forEach(group => {
      const caption = group.querySelector('.panel-caption');
      if (caption) {
        group.addEventListener('mouseenter', () => {
          caption.style.opacity = '1';
          caption.style.transform = 'translateY(0)';
        });
        
        group.addEventListener('mouseleave', () => {
          caption.style.opacity = '0';
          caption.style.transform = 'translateY(1rem)';
        });
      }
    });

    // Enhanced Checklist Interaction
    const checklist = document.getElementById('burnout-checklist');
    const headerConfettiContainer = document.getElementById('header-confetti-container');
    
    if (checklist && headerConfettiContainer) {
      checklist.addEventListener('click', (e) => {
        const item = e.target.closest('.checklist-item');
        if (item) {
          const wasChecked = item.classList.contains('checked');
          item.classList.toggle('checked');
          
          const itemId = item.dataset.itemId;
          const checked = item.classList.contains('checked');
          localStorage.setItem(`burnout-${itemId}`, checked);

          // Trigger confetti if item is being checked
          if (!wasChecked) {
            createConfettiEffect(headerConfettiContainer);
          }
        }
      });

      // Restore checked states
      document.querySelectorAll('.checklist-item').forEach(item => {
        const itemId = item.dataset.itemId;
        const checked = localStorage.getItem(`burnout-${itemId}`) === 'true';
        if (checked) {
          item.classList.add('checked');
        }
      });
    }

    function createConfettiEffect(container) {
      // Clear any existing confetti
      container.innerHTML = '';
      
      const emojis = ['‚ú®', '‚≠ê', 'üåü', 'üí´', 'üéâ', 'üé®', 'üé™', 'üåà'];
      const totalParticles = 20;
      
      for (let i = 0; i < totalParticles; i++) {
        const emoji = document.createElement('span');
        emoji.className = 'confetti-particle';
        emoji.textContent = emojis[Math.floor(Math.random() * emojis.length)];
        
        // Random initial position slightly above the container
        const startX = 50 + (Math.random() - 0.5) * 60; // 20-80% of container width
        const startY = -20; // Start above the container
        
        // Random end position
        const endX = startX + (Math.random() - 0.5) * 100; // Spread horizontally
        const endY = 100 + Math.random() * 50; // Fall below the container
        
        // Random rotation and timing
        const rotation = Math.random() * 720 - 360;
        const duration = 0.6 + Math.random() * 0.4;
        const delay = Math.random() * 0.3;
        
        emoji.style.cssText = `
          position: absolute;
          left: ${startX}%;
          top: ${startY}px;
          font-size: ${1 + Math.random()}rem;
          transform-origin: center;
          z-index: 50;
          animation: 
            confetti-fall ${duration}s ease-in forwards,
            confetti-fade ${duration}s ease-out forwards,
            confetti-rotate ${duration}s linear forwards;
          animation-delay: ${delay}s;
          --end-x: ${endX}%;
          --end-y: ${endY}px;
          --rotation: ${rotation}deg;
        `;
        
        container.appendChild(emoji);
        setTimeout(() => emoji.remove(), (duration + delay) * 1000);
      }
    }
  });
</script> 
