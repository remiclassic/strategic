    {
        number: "1",
        icon: "üß†",
        title: "LEARN THE LAZY WAY",
        description: "Get the guide and learn how creators make money online without burning out or going viral.",
        accent: "bg-rose-100",
        emoji: "‚ú®"
    },
    {
        number: "2",
        icon: "‚úçÔ∏è",
        title: "CREATE A SIMPLE DIGITAL PRODUCT",
        description: "Follow the step-by-step guide to make something useful‚Äîlike a PDF guide, a Notion template, a checklist, or tutorial.",
        accent: "bg-amber-100",
        emoji: "üéØ"
    },
    {
        number: "3",
        icon: "üí∏",
        title: "SET IT TO SELL AUTOMATICALLY",
        description: "Use smart tools to set up your product once‚Äîso it sells while you sleep, travel, or do absolutely nothing.",
        accent: "bg-emerald-100",
        emoji: "üí´"
    }
];
---

<section class="relative py-24 overflow-hidden bg-gradient-to-br from-[#FFF7E6] via-[#FFFBF2] to-[#FFF7E6]">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-halftone opacity-5 pointer-events-none mix-blend-multiply animate-subtle-scale"></div>
    
    <!-- Decorative Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-10 left-10 text-6xl animate-float">‚ú®</div>
        <div class="absolute bottom-20 right-10 text-6xl animate-float" style="animation-delay: 1s">üí´</div>
        <div class="absolute top-1/3 right-1/4 text-5xl animate-float" style="animation-delay: 0.5s">üéØ</div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <!-- Header -->
        <div class="text-center mb-16 reveal-on-scroll">
            <div class="comic-bubble bg-white inline-block transform -rotate-2 mb-6 hover:rotate-2 transition-all duration-300">
                <p class="text-xl font-bold relative inline-block">
                    <span class="relative z-10">üéØ How It Works</span>
                </p>
            </div>
            
            <h2 class="text-5xl md:text-6xl mb-8 max-w-4xl mx-auto transform hover:scale-105 transition-all duration-300 font-bold" style="font-family: 'Inter', system-ui, -apple-system, sans-serif;">
                <span class="relative inline-block">
                    Three Simple Steps to Freedom
                    <div class="absolute bottom-0 left-0 right-0 h-4 bg-[#FFE066] -rotate-1 -z-10 animate-width"></div>
                </span>
            </h2>
        </div>

        <!-- Steps Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            {steps.map((step, index) => (
                <div class="relative group">
                    <!-- Connection Lines (only for desktop) -->
                    {index < steps.length - 1 && (
                        <div class="hidden md:block absolute top-1/2 left-[calc(100%_-_2rem)] w-[calc(4rem_+_2vw)] h-0.5 bg-black transform -translate-y-1/2 z-0">
                            <div class="absolute right-0 -top-1 w-3 h-3 bg-black transform rotate-45"></div>
                        </div>
                    )}
                    
                    <!-- Step Card -->
                    <div 
                        class={`step-card relative comic-card ${step.accent} transform hover:scale-105 hover:-rotate-2 transition-all duration-500 group`}
                        style={`animation-delay: ${index * 200}ms`}
                    >
                        <!-- Number Badge -->
                        <div class="absolute -top-4 -left-4 w-16 h-16 bg-black rounded-full flex items-center justify-center transform -rotate-12 border-4 border-white shadow-xl z-10">
                            <span class="text-white text-2xl font-bold">{step.number}</span>
                        </div>

                        <!-- Floating Emoji -->
                        <div class="absolute -top-2 -right-2 text-4xl animate-float" style={`animation-delay: ${index * 0.2}s`}>
                            {step.emoji}
                        </div>
                        
                        <div class="p-8 pt-12">
                            <!-- Icon with Enhanced Presentation -->
                            <div class="relative mb-6">
                                <div class="absolute inset-0 bg-black opacity-5 blur-xl transform group-hover:scale-110 transition-transform duration-300"></div>
                                <div class="text-6xl transform group-hover:scale-110 group-hover:rotate-6 transition-all duration-300">
                                    {step.icon}
                                </div>
                            </div>
                            
                            <!-- Title with Better Readable Font -->
                            <h3 class="text-2xl font-bold mb-4 leading-tight group-hover:text-purple-600 transition-colors duration-300" style="font-family: 'Inter', system-ui, -apple-system, sans-serif;">
                                {step.title}
                            </h3>
                            
                            <!-- Description -->
                            <p class="text-gray-700 group-hover:text-gray-900 transition-colors duration-300">
                                {step.description}
                            </p>
                        </div>

                        <!-- Bottom Decoration -->
                        <div class="absolute bottom-0 left-0 right-0 h-2 bg-black opacity-10 transform group-hover:scale-x-110 transition-transform duration-300"></div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .comic-card {
        border: 4px solid black;
        border-radius: 16px;
        box-shadow: 8px 8px 0 rgba(0, 0, 0, 0.2);
        overflow: hidden;
        position: relative;
    }

    .comic-card:hover {
        box-shadow: 12px 12px 0 rgba(0, 0, 0, 0.15);
    }

    .comic-bubble {
        border: 4px solid black;
        border-radius: 12px;
        padding: 1rem 1.5rem;
        box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
    }

    .bg-halftone {
        background-image: radial-gradient(circle at center, black 1px, transparent 1px);
        background-size: 24px 24px;
        background-position: center;
    }

    @keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-20px) rotate(5deg);
        }
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    @keyframes subtle-scale {
        0%, 100% {
            transform: scale(1) rotate(0deg);
            opacity: 0.05;
        }
        50% {
            transform: scale(1.1) rotate(1deg);
            opacity: 0.07;
        }
    }

    .animate-subtle-scale {
        animation: subtle-scale 15s ease-in-out infinite;
    }

    @keyframes width {
        0% {
            width: 0;
        }
        100% {
            width: 100%;
        }
    }

    .animate-width {
        animation: width 1.5s ease-out forwards;
    }

    .reveal-on-scroll {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .reveal-on-scroll.visible {
        opacity: 1;
        transform: translateY(0);
    }

    .font-comic {
        font-family: 'Bangers', system-ui, -apple-system, sans-serif;
    }
</style>

<script>
    // Intersection Observer for scroll animations
    document.addEventListener('DOMContentLoaded', () => {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        });

        // Observe all cards and headers
        document.querySelectorAll('.step-card, .reveal-on-scroll').forEach(el => {
            observer.observe(el);
        });
    });
</script> 