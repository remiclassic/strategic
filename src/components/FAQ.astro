			</div>
		</div>
	</div>
</section>

<style>
	.bg-halftone {
		background-image: radial-gradient(circle at center, black 1px, transparent 1px);
		background-size: 24px 24px;
		background-position: center;
	}

	.comic-bubble {
		border: 3px solid black;
		border-radius: 12px;
		box-shadow: 4px 4px 0 black;
		position: relative;
		z-index: 1;
	}

	.comic-bubble:hover {
		box-shadow: 6px 6px 0 black;
	}

	.comic-label {
		z-index: 2;
		box-shadow: 2px 2px 0 black;
	}

	.faq-answer {
		transition: max-height 0.3s ease-out, opacity 0.3s ease-out, transform 0.3s ease-out;
		max-height: 0;
		opacity: 0;
		transform: translateY(-10px);
		border-top: 2px dashed #ccc;
	}

	.faq-item {
		transition: transform 0.2s ease-out, box-shadow 0.2s ease-out;
		border: 3px solid black;
		border-radius: 12px;
		box-shadow: 4px 4px 0 black;
		background-color: #fffde7;
		position: relative;
	}

	.faq-item:hover {
		transform: translateY(-2px);
		box-shadow: 6px 6px 0 black;
	}

	.faq-icon {
		transition: transform 0.3s ease-out, background-color 0.3s ease-out;
	}

	[aria-expanded="true"] .faq-icon {
		transform: scale(1.1);
		background-color: #f0f0f0;
	}
</style>

<script>
	// FAQ Accordion functionality
	document.addEventListener('DOMContentLoaded', () => {
		const faqItems = document.querySelectorAll('.faq-item');

		faqItems.forEach(item => {
			const button = item.querySelector('button');
			const answer = item.querySelector('.faq-answer');
			const icon = item.querySelector('.faq-icon');

			button.addEventListener('click', () => {
				const isExpanded = button.getAttribute('aria-expanded') === 'true';
				
				// Close all other FAQs with animation
				faqItems.forEach(otherItem => {
					if (otherItem !== item) {
						const otherButton = otherItem.querySelector('button');
						const otherAnswer = otherItem.querySelector('.faq-answer');
						const otherIcon = otherItem.querySelector('.faq-icon');
						
						if (otherButton.getAttribute('aria-expanded') === 'true') {
							// Animate closing
							otherAnswer.style.maxHeight = '0';
							otherAnswer.style.opacity = '0';
							otherAnswer.style.transform = 'translateY(-10px)';
							
							// Wait for animation to complete before hiding
							setTimeout(() => {
								otherButton.setAttribute('aria-expanded', 'false');
								otherAnswer.classList.add('hidden');
								otherIcon.textContent = '+';
								otherAnswer.style.maxHeight = null;
								otherAnswer.style.opacity = null;
								otherAnswer.style.transform = null;
							}, 300);
						}
					}
				});

				// Toggle current FAQ with animation
				if (!isExpanded) {
					// Opening animation
					button.setAttribute('aria-expanded', 'true');
					answer.classList.remove('hidden');
					icon.textContent = '‚àí';
					answer.style.maxHeight = answer.scrollHeight + 'px';
					answer.style.opacity = '1';
					answer.style.transform = 'translateY(0)';
				} else {
					// Closing animation
					answer.style.maxHeight = '0';
					answer.style.opacity = '0';
					answer.style.transform = 'translateY(-10px)';
					
					// Wait for animation to complete before hiding
					setTimeout(() => {
						button.setAttribute('aria-expanded', 'false');
						answer.classList.add('hidden');
						icon.textContent = '+';
						answer.style.maxHeight = null;
						answer.style.opacity = null;
						answer.style.transform = null;
					}, 300);
				}
			});
		});
	});
</script> 