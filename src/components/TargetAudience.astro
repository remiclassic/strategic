---
// Function to handle image paths
const getImagePath = (path: string) => {
    const cleanPath = path.startsWith('/') ? path.slice(1) : path;
    return import.meta.env.DEV ? `/${cleanPath}` : `/strategic/${cleanPath}`;
};

// Define the target audience data
const targetAudiences = [
  {
    id: "freelancer",
    title: "FREELANCERS",
    description: "Tired of the feast-or-famine cycle? Want to build a sustainable business that gives you freedom?",
    image: getImagePath('images/freelancer.png'),
    icon: "ðŸ’¼"
  },
  {
    id: "sidehustler",
    title: "SIDE HUSTLERS",
    description: "Working a 9-5 but dreaming of more? Ready to turn your passion into a profitable business?",
    image: getImagePath('images/sidehustlers.png'),
    icon: "ðŸš€"
  },
  {
    id: "business",
    title: "BUSINESS OWNERS",
    description: "Want to scale without the stress? Learn how to build systems that work while you sleep.",
    image: getImagePath('images/business.png'),
    icon: "ðŸ’ª"
  }
];
---

<section class="bg-yellow-100 py-24 relative overflow-hidden">
  <!-- Background Image with Parallax -->
  <div class="absolute inset-0 pointer-events-none opacity-20 parallax-bg">
    <img src={getImagePath('images/isthisyou2.png')} alt="Background Pattern" class="w-full h-full object-cover object-center" />
  </div>

  <!-- Content Container -->
  <div class="container mx-auto px-4 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">IS THIS YOU?</h2>
      <p class="text-xl text-gray-700 max-w-2xl mx-auto">
        You're not alone. Many successful entrepreneurs started exactly where you are now.
      </p>
    </div>

    <!-- Target Audience Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {targetAudiences.map((audience) => (
        <div class="bg-white rounded-lg shadow-lg p-6 transform hover:scale-105 transition-transform duration-300">
          <div class="text-4xl mb-4">{audience.icon}</div>
          <h3 class="text-2xl font-bold mb-4">{audience.title}</h3>
          <p class="text-gray-600 mb-6">{audience.description}</p>
          <img src={audience.image} alt={audience.title} class="w-full h-48 object-cover rounded-lg mb-4" />
        </div>
      ))}
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16">
      <p class="text-xl mb-8">Ready to join them?</p>
      <a href="#pricing" class="bg-blue-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-blue-700 transition-colors">
        Get Started Today
      </a>
    </div>
  </div>
</section>

<style>
  .parallax-bg {
    transform: translateZ(-1px) scale(2);
    z-index: -1;
  }
</style> 